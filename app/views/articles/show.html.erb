<div class="container">
  <div class="row">
  <div class="col-md-4 margin-top-5per ">
     <% if @article.image.attached? %>
      <%= image_tag @article.image, class: 'article-image' %>
       <% end %>
        <h1 class="text-size"><%= @article.title %></h1>
         <div>
          <%= simple_format @article.body %>
         <p class="text-right">
        <%= @article.created_at.strftime("%Y年%m月%d日") %>
       </p>
     </div>
   </div>
  </div>
